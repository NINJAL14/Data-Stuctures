Implementing a program to perform Depth First Search (DFS) traversal of a graph using an adjacency matrix representation

#include <stdio.h>
#define MAX 100


int stack[MAX],top = -1;
int visited[MAX];


void push(int v) {
if (top == MAX - 1) {
printf("Stack Overflow\n");
return;
}
stack[++top] = v;
}


int pop() {
if (top == -1) {
return -1;
}
return stack[top--];
}


void dfs(int adj[MAX][MAX], int n, int start) {
int i, current;
for (i = 0; i < n; i++) {
visited[i] = 0;
}
top = -1;
push(start);
visited[start] = 1;


printf("DFS Traversal starting from vertex %d: ", start);  


while (top != -1) {  
    current = pop();  
    printf("%d ", current);  


    for (i = 0; i < n; i++) {  
        if (adj[current][i] == 1 && visited[i] == 0) {  
            push(i);  
            visited[i] = 1;  
        }  
    }  
}  
printf("\n");
}


void addEdge(int graph[MAX][MAX], int start, int end) {
graph[start][end] = 1;
graph[end][start] = 1;
}


int main() {
int vertices, edges, i, j, start, end;
int adj[MAX][MAX];


printf("Input the number of vertices: ");  
scanf("%d", &vertices);  
printf("Input the number of edges: ");  
scanf("%d", &edges);  


for (i = 0; i < vertices; i++) {  
    for (j = 0; j < vertices; j++) {  
        adj[i][j] = 0;  
    }  
}  


for (i = 0; i < edges; i++) {  
    printf("Input edge %d (start end): ", i + 1);  
    scanf("%d%d", &start, &end);  
    addEdge(adj, start, end);  
}  


printf("Enter starting vertex: ");  
scanf("%d", &start);  


dfs(adj, vertices, start);  


return 0;


}
